<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PastoreSilvio"
        android:background="@color/cardview_dark_background"
        android:textAlignment="center"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/mosseTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        android:background="@color/cardview_dark_background"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="15px"
        android:layout_below="@id/name"
        />

    <LinearLayout
        android:id="@+id/mainGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:paddingHorizontal="20px"
        >

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >
            <Button
                android:id="@+id/arrowTop1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#8657;"
                android:layout_margin="5px"
                />
            <Button
                android:id="@+id/arrowTop2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#8657;"
                android:layout_margin="5px"
                />
            <Button
                android:id="@+id/arrowTop3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#8657;"
                android:layout_margin="5px"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/arrowLeft1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#8656;"
                android:layout_marginHorizontal="5px"
                />
            <Button
                android:id="@+id/numberTV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />
            <Button
                android:id="@+id/numberTV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />
            <Button
                android:id="@+id/numberTV3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />
            <Button
                android:id="@+id/arrowRight1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#8658;"
                android:layout_marginHorizontal="5px"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/arrowLeft2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#8656;"
                android:layout_marginHorizontal="5px"
                />
            <Button
                android:id="@+id/numberTV4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />
            <Button
                android:id="@+id/numberTV5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />
            <Button
                android:id="@+id/numberTV6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />
            <Button
                android:id="@+id/arrowRight2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#8658;"
                android:layout_marginHorizontal="5px"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/arrowLeft3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#8656;"
                android:layout_marginHorizontal="5px"
                />
            <Button
                android:id="@+id/numberTV7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />
            <Button
                android:id="@+id/numberTV8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />
            <Button
                android:id="@+id/numberTV9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                />
            <Button
                android:id="@+id/arrowRight3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#8658;"
                android:layout_marginHorizontal="5px"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/column5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            >
            <Button
                android:id="@+id/arrowDown1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#8659;"
                android:layout_marginHorizontal="5px"
                />
            <Button
                android:id="@+id/arrowDown2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#8659;"
                android:layout_marginHorizontal="5px"
                />
            <Button
                android:id="@+id/arrowDown3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&#8659;"
                android:layout_marginHorizontal="5px"
                />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>